<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TaskerTray.Views.QuickAddWindow"
        Title="Add Task"
        Width="400"
        Height="150"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="BorderOnly">

    <Grid Margin="16" RowDefinitions="Auto,Auto,Auto">
        <TextBlock Grid.Row="0"
                   Text="New Task:"
                   Margin="0,0,0,8"
                   FontWeight="SemiBold"/>

        <TextBox Grid.Row="1"
                 x:Name="TaskInput"
                 Watermark="Enter task description..."
                 AcceptsReturn="False"
                 KeyDown="OnKeyDown"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0"
                    Spacing="8">
            <Button Content="Cancel"
                    Click="OnCancel"
                    Width="80"/>
            <Button Content="Add"
                    Click="OnAdd"
                    Width="80"
                    Classes="accent"/>
        </StackPanel>
    </Grid>
</Window>
