<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskerTray"
             xmlns:converters="clr-namespace:TaskerTray.Converters"
             x:Class="TaskerTray.App"
             Name="Tasker"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <converters:CheckedToForegroundConverter x:Key="CheckedToForeground"/>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <!-- Rounded corners for context menus -->
        <Style Selector="ContextMenu">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <!-- Context menu border -->
        <Style Selector="ContextMenu > Border">
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <!-- Context menu items - compact -->
        <Style Selector="ContextMenu MenuItem">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinHeight" Value="24"/>
        </Style>

        <!-- Center the text inside menu items -->
        <Style Selector="MenuItem ContentPresenter#PART_HeaderPresenter">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Submenu popup styling -->
        <Style Selector="MenuItem Popup Border">
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

    </Application.Styles>

</Application>
