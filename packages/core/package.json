{
  "name": "@tasker/core",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    },
    "./queries": {
      "types": "./dist/queries/index.d.ts",
      "default": "./dist/queries/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./parsers": {
      "types": "./dist/parsers/index.d.ts",
      "default": "./dist/parsers/index.js"
    },
    "./undo": {
      "types": "./dist/undo/index.d.ts",
      "default": "./dist/undo/index.js"
    },
    "./backup": {
      "types": "./dist/backup/index.d.ts",
      "default": "./dist/backup/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "better-sqlite3": "npm:libsql@^0.5.22",
    "drizzle-orm": "^0.38.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
